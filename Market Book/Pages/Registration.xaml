<Page x:Class="Market_Book.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Market_Book.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration"
      Name="RegistationPage">

    <Grid DataContext="{Binding ElementName=RegistationPage, Path=.}">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBox Text="{Binding User.FullName}"  Width="100"></TextBox>
            <TextBox Text="{Binding User.Login}"  Width="100"></TextBox>
            <TextBox Text="{Binding User.Password}"  Width="100"></TextBox>
            <TextBox Text="{Binding User.Address}"  Width="100"></TextBox>
            <Button Click="Button_Click">Save changes</Button>

        </StackPanel>
    </Grid>
</Page>
